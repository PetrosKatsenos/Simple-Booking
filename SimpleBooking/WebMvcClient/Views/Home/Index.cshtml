@{
    ViewData["Title"] = "Home Page";
}

<header>
    <div class="header-content">
        <div class="header-content-inner">
            <h1 id="homeHeading">Discover Your Next Experience</h1>
            <hr>
            <p>Simple Booking is the best platform for finding new and unique experiences!</p>
        </div>
    </div>
</header>

<section class="bg-primary" id="about">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2 text-center">
                <h2 class="section-heading">We've got what you need!</h2>
                <hr class="light">
                <p class="text-faded">Simple Booking has everything you need to get yourself out and meeting people! Browse hundreds of free and paid events and sign up for the ones that interest you! Booking could not more simple!</p>
                <a asp-controller="Catalog" asp-action="Index" class="page-scroll btn btn-default btn-xl sr-button">Explore Events</a>
            </div>
        </div>
    </div>
</section>

<section id="services">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h2 class="section-heading">Our Services</h2>
                <hr class="primary">
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-lg-3 col-md-6 text-center">
                <div class="service-box">
                    <i class="fa fa-4x fa-search text-primary sr-icons"></i>
                    <h3>Browse Events</h3>
                    <p class="text-muted">Thousands of events to browse!</p>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 text-center">
                <div class="service-box">
                    <i class="fa fa-4x fa-ticket text-primary sr-icons"></i>
                    <h3>Ready to Ship</h3>
                    <p class="text-muted">Order and receive tickets instantly!</p>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 text-center">
                <div class="service-box">
                    <i class="fa fa-4x fa-calendar text-primary sr-icons"></i>
                    <h3>Create Events</h3>
                    <p class="text-muted">Easily create and manage events!</p>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 text-center">
                <div class="service-box">
                    <i class="fa fa-4x fa-user-secret text-primary sr-icons"></i>
                    <h3>Secure</h3>
                    <p class="text-muted">More secure than most government institutions!</p>
                </div>
            </div>
        </div>
    </div>
</section>

