                    <img src="img/portfolio/thumbnails/6.jpg" class="img-responsive" alt="">
                    <div class="portfolio-box-caption">
                        <div class="portfolio-box-caption-content">
                            <div class="project-name">
                                Health
                            </div>
                        </div>
                    </div>
                </a>
            </div>
        </div>
    </div>
</section>

<aside class="bg-dark">
    <div class="container text-center">
        <div class="call-to-action">
            <h2>Discover your next experience!</h2>
            <a asp-controller="Catalog" asp-action="Index" class="btn btn-default btn-xl sr-button">Browse Events</a>
        </div>
    </div>
</aside>

<section id="contact">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2 text-center">
                <h2 class="section-heading">Have A Question?</h2>
                <hr class="primary">
                <p>Ready to run your next event with us? That's great! Give us a call or send us an email even though we'll probably never get back to you!</p>
            </div>
            <div class="col-lg-4 col-lg-offset-2 text-center">
                <i class="fa fa-phone fa-3x sr-contact"></i>
                <p>123-456-6789</p>
            </div>
            <div class="col-lg-4 text-center">
                <i class="fa fa-envelope-o fa-3x sr-contact"></i>
                <p><a href="https://youtu.be/dQw4w9WgXcQ">customer.support@simple.booking</a></p>
            </div>
        </div>
    </div>
</section>

