@model WebMvcClient.ViewModels.CartComponentViewModel

@{
    ViewData["Title"] = "My Cart";
}

<a class="esh-basketstatus @Model.Disabled"
   asp-area=""
   asp-controller="CartList"
   asp-action="Index">
    @if (ViewBag.IsBasketInoperative == true)
    {
        <div class="esh-basketstatus-image">
            <img src="~/images/cart-inoperative.png" />
        </div>
        <div class="esh-basketstatus-badge-inoperative">
            X
        </div>
    }
    else
    {
        <div class="esh-basketstatus-image">
            <img src="~/images/cart.png" />
        </div>
        
            @if (Model.ItemsInCart > 0)
            {
            <div class="esh-basketstatus-badge">
                @Model.ItemsInCart
            </div>
            }
        
    }
</a>